    <RelativeLayout
        android:id="@+id/yingyongRoom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"
        android:layout_marginTop="@dimen/line1"
        android:background="@color/home_botton_bgcolor"
        >

        <ImageView
            android:id="@+id/iv_yingyong"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/yingyong"
            android:layout_marginLeft="@dimen/dimen_15"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size18"
            android:layout_toRightOf="@id/iv_yingyong"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_10"
            android:text="我的应用"
            android:textColor="@color/userName_color"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/right"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_5"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/toFriendRoom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"
        android:layout_marginTop="@dimen/line1"
        android:background="@color/home_botton_bgcolor"
        >

        <ImageView
            android:id="@+id/iv_friend"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_share_personal"
            android:layout_marginLeft="@dimen/dimen_15"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size18"
            android:layout_toRightOf="@id/iv_friend"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_10"
            android:text="推荐给好友"
            android:textColor="@color/userName_color"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/right"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_5"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/settingRoom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"
        android:layout_marginTop="@dimen/line1"
        android:background="@color/home_botton_bgcolor"
        >

        <ImageView
            android:id="@+id/iv_setting"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_set_personal"
            android:layout_marginLeft="@dimen/dimen_15"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size18"
            android:layout_toRightOf="@id/iv_setting"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_10"
            android:text="设置"
            android:textColor="@color/userName_color"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/right"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_5"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/helpRoom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"
        android:layout_marginTop="@dimen/line1"
        android:background="@color/home_botton_bgcolor"
        >

        <ImageView
            android:id="@+id/iv_help"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_helpcenter_personal"
            android:layout_marginLeft="@dimen/dimen_15"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size18"
            android:layout_toRightOf="@id/iv_help"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_10"
            android:text="帮助与反馈"
            android:textColor="@color/userName_color"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/right"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_5"
            />

    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/aboutRoom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"
        android:layout_marginTop="@dimen/line1"
        android:background="@color/home_botton_bgcolor"
        >

        <ImageView
            android:id="@+id/iv_about"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_cooperate_personal"
            android:layout_marginLeft="@dimen/dimen_15"
            />

        <TextView
            android:id="@+id/tv_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size18"
            android:layout_toRightOf="@id/iv_about"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_10"
            android:text="关于链主"
            android:textColor="@color/userName_color"
            />

        <ImageView
            android:id="@+id/iv_right2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/right"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_5"
            />


        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/userPhone_color"
            android:textSize="@dimen/text_size14"
            android:layout_toLeftOf="@id/iv_right2"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_5"
            />
    </RelativeLayout>




</LinearLayout>
